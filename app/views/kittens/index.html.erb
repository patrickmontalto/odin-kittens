<h2>Kittens Index</h2>
<%= link_to "Create Kitten", new_kitten_path %>
<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Age</th>
			<th>Cuteness</th>
			<th>Softness</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @kittens.each do |kitten| %>
			<tr>
				<td><%= link_to kitten.name, kitten %></td>
				<td><%= kitten.age %></td>
				<td><%= kitten.cuteness %></td>
				<td><%= kitten.softness %></td>
				<td><%= link_to "Edit", edit_kitten_path(kitten)%> | 
						<%= link_to "Delete", kitten, method: :delete, data: { confirm: "Are you sure?" } %></td>
			</tr>
		<% end %>
	</tbody>
</table>
